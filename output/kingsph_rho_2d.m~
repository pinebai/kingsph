% plot density...
%

function kingsph_rho_2d (n)
clear A
if(n<=9) p1='r0000';ro1='rho0000';
elseif(n<=99) p1='r000';ro1='rho000';
elseif(n<=999) p1='r00';ro1='rho00';
elseif(n<=9999) p1='r0';ro1='rho0';
else p1='r';ro1='rho';
endif
fname=strcat(p1,num2str(n),'.out');
A=load(fname);
fname=strcat(ro1,num2str(n),'.out');
B=load(fname);
C=B(:,2);
surf(A(:,1),A(:,2),C)
axis([-1 1 -1 1])
endfunction
